<header class="bg-slate-950 h-20 flex items-center shadow-lg shadow-slate-800 transition-all w-full">
  <nav class="w-3/5 flex justify-between items-center mx-auto bg-slate-950 h-full" data-controller="navbar">
    <div class="max-w-screen grid grid-cols-2 lg:grid-cols-3 items-center justify-between mx-auto p-4d">
      <!-- Logo -->
      <div>
        <%= link_to root_path, class: 'flex items-center' do %>
          <span class="self-center text-2xl font-semibold whitespace-nowrap">
            c<span class="text-blue-500 text-2xl font-semibold">Legrand</span><span class="text-indigo-500 text-3xl font-extrabold">web</span> 
          </span>
        <% end %>
      </div>
