          <%= active_link_to 'Contacto', contact_path, class: 'w-24 flex justify-center items-center flex-1 nav-link' %>
        </div>
      </div>
      <div class="flex justify-end lg:col-start-3 gap-4">
        <!-- Menu Toggle Button -->
        <%= link_to 'login', '', class: 'w-24 btn btn-success' %>
      </div>
